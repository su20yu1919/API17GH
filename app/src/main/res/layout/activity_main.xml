<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id = "@+id/layout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/game_screen">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Lantern"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
      />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lanternradial"
        android:src="@drawable/lanthernradial"
        android:layout_gravity="center"
        android:layout_x="80dp"
        android:layout_y="80dp"
        android:layout_toStartOf="@+id/Scared_Person"
        android:layout_alignEnd="@+id/lanternkill" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lanternkill"
        android:src="@drawable/lanternkill"
        android:layout_gravity="left|top"
        android:layout_x="223dp"
        android:layout_y="213dp"
        android:layout_above="@+id/Scared_Person"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Scared_Person"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        ></ImageView>

</RelativeLayout>